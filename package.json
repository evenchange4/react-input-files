{
  "name": "react-input-files",
  "version": "1.2.0",
  "typings": "./index.d.ts",
  "main": "lib/index.js",
  "module": "es/index.js",
  "sideEffects": false,
  "files": [
    "es",
    "lib",
    "index.d.ts"
  ],
  "scripts": {
    "build": "hsu-scripts build src",
    "build-storybook": "build-storybook",
    "test": "NODE_ENV='test' jest --coverage",
    "test:watch": "npm run test -- --watch",
    "start": "start-storybook -p 6006",
    "eslint": "eslint ./",
    "flow": "flow",
    "flow-coverage": "hsu-scripts flow --threshold 76",
    "precommit": "lint-staged",
    "format": "prettier --write '**/*.{js,json,md,css,yaml,yml}' '*.{js,json,md,css,yaml,yml}'",
    "changelog": "conventional-changelog --infile ./CHANGELOG.md --same-file --release-count 0 --output-unreleased"
  },
  "dependencies": {
    "prop-types": "^15.7.1",
    "react-portal": "^4.2.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "4.2.0-alpha.8",
    "@storybook/addon-info": "4.2.0-alpha.8",
    "@storybook/addon-links": "4.2.0-alpha.8",
    "@storybook/addon-options": "4.2.0-alpha.8",
    "@storybook/addon-storyshots": "4.2.0-alpha.8",
    "@storybook/react": "4.2.0-alpha.8",
    "codecov": "3.2.0",
    "conventional-changelog-cli": "2.0.12",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.10.0",
    "enzyme-to-json": "3.3.5",
    "eslint": "5.14.1",
    "flow-bin": "0.93.0",
    "hsu-scripts": "1.0.7",
    "husky": "1.3.1",
    "jest": "24.1.0",
    "lint-staged": "8.1.4",
    "prettier": "1.16.4",
    "react": "16.8.3",
    "react-dom": "16.8.3",
    "react-test-renderer": "16.8.3"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/*.example.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/lib/",
      "<rootDir>/es/"
    ],
    "resetMocks": true,
    "resetModules": true
  },
  "babel": {
    "presets": [
      "./node_modules/hsu-scripts/babel.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/hsu-scripts/eslint.js"
    ]
  },
  "lint-staged": {
    "*.{js,json,md,css,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "description": "Reusable React input file component.",
  "author": "Michael Hsu <evenchange4@gmail.com>",
  "license": "MIT",
  "keywords": [
    "react",
    "input file"
  ],
  "bugs": {
    "url": "https://github.com/evenchange4/react-input-files/issues",
    "email": "evenchange4@gmail.com"
  },
  "homepage": "https://github.com/evenchange4/react-input-files#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/evenchange4/react-input-files.git"
  }
}
